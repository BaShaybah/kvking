<UIButton>
	size_hint_y:None
	height:"60dp"
	pos_hint:{"center_x":.5,"center_y":.5}
	
	canvas.before:
		Color:
			rgba:.2,.4,.6,0
		Rectangle:
			pos:self.pos
			size:self.size
		
	
	Icon:
		color:root.icon_color
		id:ic
		icon:root.icon
		pos_hint:{"center_x":.1,"center_y":.5}
		
	Label:
		id:lbl
		halign:"left"
		color:root.text_color
		text:root.text
		size_hint:None,None
		size:self.texture_size
		pos_hint:{"x":.2,"center_y":.5}
		
		canvas.before:
			Color:
				rgba:.2,.4,0,1
			Line:
				points:self.x-20,root.y,root.right-15,root.y
		
	
	
	    
	